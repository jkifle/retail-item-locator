{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1" 
    }
  ],
  
  
  "installCommand": "pip install -r requirements.txt && cd frontend && npm install", 
    "buildCommand": "cd frontend && npm run build" 
}